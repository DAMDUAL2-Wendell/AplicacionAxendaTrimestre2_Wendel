<Page x:Class="AplicacionAxendaTrimestre2_Wendel.UI.Views.Paginas.PagContactos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AplicacionAxendaTrimestre2_Wendel.UI.Views.Paginas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagContactos">


    <Grid>


        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="18"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>



            <!-- Busqueda -->
            <Grid Grid.Column="0" Grid.Row="1">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"></ColumnDefinition>
                    <ColumnDefinition Width="0.5*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition></RowDefinition>
                </Grid.RowDefinitions>
                
                <StackPanel Orientation="Horizontal" HorizontalAlignment="Stretch" Grid.Column="0">

                    <StackPanel Orientation="Vertical">
                        <Label Content="Buscar: " Background="LightGray" Height="30"></Label>
                    </StackPanel>

                    <StackPanel Orientation="Vertical" VerticalAlignment="Center" Margin="10 0 0 0">
                        <TextBox x:Name="tb_FindContact" Tag="Search" Height="30" TextChanged="Tb_FindContact_TextChanged" Width="300" VerticalAlignment="Center" HorizontalAlignment="Left"/>
                    </StackPanel>

                </StackPanel>


                <StackPanel Orientation="Vertical" VerticalAlignment="Center" HorizontalAlignment="Right" Grid.Column="1">
                    <Button Content="Cambiar vista" Height="30" Margin=" 0 0 10 0 "/>
                </StackPanel>
            </Grid>

            <DataGrid Name="dataGrid" Grid.Column="0" Grid.Row="2" HorizontalAlignment="Stretch" VerticalAlignment="Top" AutoGenerateColumns="False" ItemsSource="{Binding Contactos}" CanUserAddRows="False">
                <DataGrid.Columns>
                    <!-- Botón para eliminar -->
                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="X" Height="20" Width="20" HorizontalAlignment="Center" VerticalAlignment="Center" Click="Eliminar_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Imagen -->
                    <DataGridTemplateColumn Width="Auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Image Source="/UI/Views/Paginas/user.png" Width="50" Height="50"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>

                    <!-- Resto de las columnas de datos -->
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}"/>
                    <DataGridTextColumn Header="FirstName" Binding="{Binding FirstName}"/>
                    <DataGridTextColumn Header="LastName" Binding="{Binding LastName}"/>
                    <DataGridTextColumn Header="FullName" Binding="{Binding FullName}"/>
                    <DataGridTextColumn Header="Nickname" Binding="{Binding Nickname}"/>
                    <DataGridTextColumn Header="Email" Binding="{Binding Email}"/>
                    <DataGridTextColumn Header="Address" Binding="{Binding Address}"/>
                    <DataGridTextColumn Header="Note" Binding="{Binding Note}"/>
                    <DataGridTextColumn Header="Age" Binding="{Binding Age}"/>
                    <DataGridTextColumn Header="BirthDate" Binding="{Binding BirthDate}"/>
                    <DataGridTextColumn Header="ContactType" Binding="{Binding ContactType}"/>
                </DataGrid.Columns>
            </DataGrid>


            <!--Botones-->
            <Grid Grid.Column="0" Grid.Row="3" >
                <UniformGrid Rows="1" Columns="4">
                    <Button Name="btn_AddContact" Content="Add" Margin="1" Click="Btn_AddContact_Click">
                    </Button>
                    <Button Name="btn_EditContact" Content="Edit" Margin="1" Click="Btn_EditContact_Click"/>
                    <Button Name="btn_DeleteContact" Content="Delete" Margin="1" Click="Btn_DeleteContact_Click"/>
                    <Button Name="btn_Atras" Content="Duplicar contacto" Margin="1" Click="ClickDuplicarContacto"/>
                </UniformGrid>
            </Grid>
        </Grid>


    </Grid>
</Page>
