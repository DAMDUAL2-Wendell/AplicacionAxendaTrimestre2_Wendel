<Page x:Class="AplicacionAxendaTrimestre2_Wendel.UI.Views.Paginas.PagContactos"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AplicacionAxendaTrimestre2_Wendel.UI.Views.Paginas"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="PagContactos">

    <Grid>


        <Grid Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="18"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="30"/>
            </Grid.RowDefinitions>

           

            <!-- Busqueda -->
            <Grid Grid.Column="0" Grid.Row="1">
                <TextBox x:Name="tb_FindContact" Tag="Search" TextChanged="Tb_FindContact_TextChanged"/>
            </Grid>

            <!-- Ordenar -->
            <Grid Grid.Column="0" Grid.Row="2" Height="30" VerticalAlignment="Top">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="1.2*"></ColumnDefinition>
                    <ColumnDefinition Width="0.5*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                    <ColumnDefinition Width="*"></ColumnDefinition>
                </Grid.ColumnDefinitions>
                <Label Content="Ordernar por: "  Grid.Column="0" Background="WhiteSmoke"></Label>
                <Button Content="ID"   Click="SortByID_Click" Grid.Column="1" />
                <Button Content="FirstName"  Click="SortByFirstName_Click"  Grid.Column="2"/>
                <Button Content="LastName"  Click="SortByLastName_Click"  Grid.Column="3"/>
                <Button Content="FullName"   Click="SortByFullName_Click" Grid.Column="4" />
                <Button Content="Nickname"  Click="SortByNickname_Click"  Grid.Column="5"/>
                <Button Content="Email"  Click="SortByEmail_Click"  Grid.Column="6"/>
                <Button Content="Address"  Click="SortByAddress_Click"  Grid.Column="7"/>
                <Button Content="Note"  Click="SortByNote_Click"  Grid.Column="8"/>
                <Button Content="Age"  Click="SortByAge_Click"  Grid.Column="9"/>
                <Button Content="BirthDate"  Click="SortByBirthDate_Click"  Grid.Column="10"/>
                <Button Content="ContactType"  Click="SortByContactType_Click"  Grid.Column="11"/>

            </Grid>


            <!-- Contactos -->
            <Grid  Grid.Column="0" Grid.Row="2" Margin="0,30,0,0">
                <ListBox Margin="0 10 0 10" BorderThickness="0" SelectionMode="Extended" Name="lb_ContactBox" Background="{x:Null}" KeyDown="Lb_ContactBox_KeyDown">

                    <!-- Template de Contacto -->
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>

                                <!---Imagen-->
                                <Image VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" Source="C:\Users\Equipo\Desktop\Clases\DI\UD7\App2eval\AplicacionAxendaTrimestre2_Wendel\AplicacionAxendaTrimestre2_Wendel\Resources\img\user.png" Width="50" Height="50" Margin="0 3 5 3" HorizontalAlignment="Left"/>

                                <!-- Informacion contacto -->
                                <StackPanel Grid.Column="1" Grid.Row="0" Orientation="Horizontal">
                                    <TextBlock Text="{Binding Id}" FontWeight="Bold" VerticalAlignment="Center" Margin="10,0,5,0"/>

                                    <TextBlock Text="{Binding FirstName}" FontWeight="Bold" VerticalAlignment="Center" Margin="20,0,0,0"/>

                                    <TextBlock Text="{Binding LastName}" FontWeight="Bold" VerticalAlignment="Center" Margin="20,0,0,0"/>
                                </StackPanel>

                                <StackPanel Grid.Column="1" Grid.Row="1">
                                    <TextBlock Text="Telefono: " FontWeight="Bold" Margin="20,0,0,0" VerticalAlignment="Center"/>
                                </StackPanel>


                            </Grid>
                        </DataTemplate>
                    </ListBox.ItemTemplate>

                </ListBox>
            </Grid>

            <!--Botones-->
            <Grid Grid.Column="0" Grid.Row="3" >
                <UniformGrid Rows="1" Columns="4">
                    <Button Name="btn_AddContact" Content="Add" Margin="1" Click="Btn_AddContact_Click"/>
                    <Button Name="btn_EditContact" Content="Edit" Margin="1" Click="Btn_EditContact_Click"/>
                    <Button Name="btn_DeleteContact" Content="Delete" Margin="1" Click="Btn_DeleteContact_Click"/>
                    <Button Name="btn_Atras" Content="Atras" Margin="1" Click="NavegarAtras"/>
                </UniformGrid>
            </Grid>
        </Grid>


    </Grid>
</Page>
