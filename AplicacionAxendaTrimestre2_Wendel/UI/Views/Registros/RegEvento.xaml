<Page x:Class="AplicacionAxendaTrimestre2_Wendel.UI.Views.Registros.RegEvento"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AplicacionAxendaTrimestre2_Wendel.UI.Views.Registros"
      mc:Ignorable="d" 
      d:DesignHeight="630" d:DesignWidth="1250"
      Title="RegEvento" FontFamily="Roboto">

    <Page.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="../../../Resources/Styles.xaml" />
                <ResourceDictionary Source="pack://application:,,,/Noesis.GUI.Extensions;component/Theme/NoesisTheme.LightBlue.xaml" />

            </ResourceDictionary.MergedDictionaries>

            <!-- Estilo para todos los botones -->
            <Style TargetType="Button" BasedOn="{StaticResource GelButton}"/>

            <!-- 
         <Style TargetType="Label" BasedOn="{StaticResource estiloLabel}"></Style>
         
         -->

        </ResourceDictionary>
    </Page.Resources>


    <Grid Background="White" Margin="10" Width="1230">
        <!-- Titulo -->
        <StackPanel Grid.Row="0" Grid.Column="0" Grid.ColumnSpan="3" Margin="10,10,10,10">
            <Label Background="#FFCBFFEE" Name="labelTitle" Content="Pagina de registro de eventos" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" FontFamily="Caladea" FontWeight="Bold" />
        </StackPanel>

        <!-- Contenedor para los datos del evento -->
        <StackPanel Margin="0,100,0,100" Grid.Row="1" Background="#FFDCDEE0" Grid.Column="0" Grid.ColumnSpan="3" Width="400" Height="400" HorizontalAlignment="Center">
            <!-- Titulo de los datos del evento -->
            <Label Content="Datos de Evento" FontSize="20" FontWeight="Bold" Margin="0,0,0,10" Background="#FF56BDEC" />

            <!-- Campos del evento -->
            <DockPanel Margin="10 20 10 10" HorizontalAlignment="Center" Width="350">
                <TextBlock Text="Titulo:" MinWidth="60" HorizontalAlignment="Left" VerticalAlignment="Center"/>
                <TextBox Name="tb_Titulo"  Width="280" HorizontalAlignment="Right"/>
            </DockPanel>

            <DockPanel Margin="10 10 10 10" HorizontalAlignment="Center" Width="350">
                <TextBlock Text="Descripción:" MinWidth="60" HorizontalAlignment="Left"  VerticalAlignment="Center"/>
                <TextBox Name="tb_Descripcion"  Width="280" Height="70" TextWrapping="Wrap" HorizontalAlignment="Right"  VerticalScrollBarVisibility="Auto"/>
            </DockPanel>

            <DockPanel Margin="10 10 10 10" HorizontalAlignment="Center" Width="350">
                <TextBlock Text="Fecha Inicio:" MinWidth="70" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
                <DatePicker Name="dp_FechaInicio" Width="230" HorizontalAlignment="Left"/>
            </DockPanel>

            <DockPanel Margin="10 10 10 10" HorizontalAlignment="Center" Width="350">
                <TextBlock Text="Fecha Fin:" MinWidth="70" HorizontalAlignment="Center"  VerticalAlignment="Center"/>
                <DatePicker Name="dp_FechaFin" Width="230" HorizontalAlignment="Left"/>
            </DockPanel>


            <!-- Mostrar información del contacto si existe -->
            <DockPanel Margin="10 10 10 10">
                <Label Name="lblContacto" Margin="10" HorizontalAlignment="Center" VerticalAlignment="Center" Content="Datos del Contacto no disponibles">
                </Label>
            </DockPanel>


            <!-- Botones -->
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Height="80" Margin="10" Width="400">
                <UniformGrid Rows="1" Columns="2" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <!-- Botones de registro y cancelación -->

                    <!-- Registrar -->
                    <Button Name="btnRegistrarEvento" Height="50" Width="150" Background="Aquamarine" Click="RegistrarEvento_Click" HorizontalAlignment="Center" Margin="0,0,20,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Width="35" Height="35" Source="/UI/Views/Registros/aceptar.png"></Image>
                            <TextBlock Text="Registrar" VerticalAlignment="Center" Margin="10,0,10,0" TextAlignment="Center" Width="55" TextWrapping="Wrap"></TextBlock>
                        </StackPanel>
                    </Button>



                    <!-- Cancelar -->
                    <Button Name="btnCancelar" Height="50" Width="150" Background="Aquamarine" Click="Cancelar_Click" HorizontalAlignment="Center" Margin="20,0,0,0">
                        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                            <Image Width="35" Height="35" Source="/UI/Views/Registros/cancelar.png"></Image>
                            <TextBlock Text="Cancelar" VerticalAlignment="Center" Margin="10,0,10,0" TextAlignment="Center" Width="55" TextWrapping="Wrap"></TextBlock>
                        </StackPanel>
                    </Button>
                </UniformGrid>
            </StackPanel>
         

        </StackPanel>

       

       
    </Grid>
</Page>
