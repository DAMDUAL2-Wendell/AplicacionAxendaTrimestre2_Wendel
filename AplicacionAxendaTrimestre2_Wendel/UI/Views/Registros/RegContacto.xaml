<Page x:Class="AplicacionAxendaTrimestre2_Wendel.UI.Views.Registros.RegContacto"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AplicacionAxendaTrimestre2_Wendel.UI.Views.Registros"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="300"
      Title="RegContacto" Height="450" Width="300" MinWidth="300" FontFamily="Roboto">

    <Grid Background="White">


        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="20"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <Grid Grid.Row="0" Grid.Column="0">
                <Menu FontWeight="Normal">
                    <MenuItem Header="Contact">
                        <MenuItem  Header="Set Contact File" Name="mi_SetContactFile" Click="Mi_SetContactFile_Click">
                            <MenuItem.Icon>
                                <Image Source="Resources/img/folder.png"/>
                            </MenuItem.Icon>
                        </MenuItem>
                        <MenuItem Header="Save Contact File" Name="mi_SaveContactFile" Click="Mi_SaveContactFile_Click">
                            <MenuItem.Icon>
                                <Image Source="Resources/img/diskette.png"/>
                            </MenuItem.Icon>
                        </MenuItem>
                    </MenuItem>
                </Menu>
            </Grid>

            <Grid Grid.Row="1" Grid.Column="0">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel x:Name="sp_Info" Margin="10">
                        <DockPanel Margin="0 0 0 5">
                            <TextBlock Text="Full Name:" Margin="0 0 5 0" MinWidth="100"/>
                            <TextBox Name="tb_FullName" Tag="FullName" IsEnabled="False" Text="{Binding FullName, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}" BorderThickness="0"/>
                        </DockPanel>
                        <DockPanel Margin="0 0 0 5">
                            <TextBlock Text="Last Name:" MinWidth="100" HorizontalAlignment="Left"/>
                            <TextBox Name="tb_LastName" Text="{Binding LastName}" TextChanged="Tb_LastName_TextChanged" />
                        </DockPanel>
                        <DockPanel Margin="0 0 0 5">
                            <TextBlock Text="First Name:" MinWidth="100" HorizontalAlignment="Left"/>
                            <TextBox Name="tb_FirstName" Text="{Binding FirstName}" TextChanged="Tb_FirstName_TextChanged"/>
                        </DockPanel>

                        <Expander Header="More Info" BorderThickness="0">
                            <StackPanel>
                                <DockPanel Margin="0 0 0 5">
                                    <TextBlock Text="Father Name:" MinWidth="100" HorizontalAlignment="Left"/>
                                    <TextBox Name="tb_FatherName" Text="{Binding FatherName}" TextChanged="Tb_FatherName_TextChanged"/>
                                </DockPanel>
                                <DockPanel Margin="0 0 0 5">
                                    <TextBlock Text="Nickname:" MinWidth="100" HorizontalAlignment="Left"/>
                                    <TextBox Name="tb_Nickname" Text="{Binding Nickname}"/>
                                </DockPanel>
                            </StackPanel>
                        </Expander>
                        <UniformGrid Rows="1" Columns="2" Margin="0 0 0 5">
                            <DockPanel>
                                <TextBlock Text="Type:" HorizontalAlignment="Left"/>
                                <ComboBox Name="cb_ContactType" Height="25" SelectionChanged="cb_ContactType_SelectionChanged" Margin="5">
                                </ComboBox>
                            </DockPanel>
                            <GroupBox Header="Birthday:">
                                <DatePicker SelectedDate="{Binding BirthDate}"/>
                            </GroupBox>
                        </UniformGrid>
                        <GroupBox Header="Tel:" Margin="0 0 0 5">
                            <StackPanel>
                                <ListBox Name="lb_Numbers" MaxHeight="100" KeyDown="lb_Numbers_KeyDown" FontSize="14" FontWeight="DemiBold" BorderThickness="0" SelectionMode="Extended">
                                </ListBox>

                                <StackPanel>
                                    <TextBox Name="tb_Number" Tag="Number"/>
                                    <Button Name="btn_AddNumber" Content="Add Number" Click="Btn_AddNumber_Click" Margin="0 0 0 5"/>
                                    <Button Name="btn_DeleteNumber" Content="Delete Selected Number" Click="Btn_DeleteNumber_Click"/>
                                </StackPanel>
                            </StackPanel>
                        </GroupBox>
                        <DockPanel Margin="0 0 0 5">
                            <TextBlock Text="E-mail:" MinWidth="70" HorizontalAlignment="Left"/>
                            <TextBox Name="tb_Email" Text="{Binding Email}" />
                        </DockPanel>
                        <DockPanel Margin="0 0 0 5">
                            <TextBlock Text="Address:" MinWidth="70" HorizontalAlignment="Left"/>
                            <TextBox Name="tb_Address" Text="{Binding Address}"/>
                        </DockPanel>
                        <GroupBox Header="Note:" Margin="0 0 0 5">
                            <TextBox Name="tb_Note" Text="{Binding Note}" TextWrapping="Wrap"/>
                        </GroupBox>
                    </StackPanel>
                </ScrollViewer>
            </Grid>
        </Grid>
        <Button Content="Button" HorizontalAlignment="Left" Margin="635,248,0,0" VerticalAlignment="Top" Width="0"/>


        <Button HorizontalAlignment="Left" Content="Atras" Height="25" Margin="179,398,0,0" VerticalAlignment="Top" Width="85" Click="NavegarAtras"/>


    </Grid>
</Page>
