<Window x:Class="AplicacionRelojWendel.VentanaAlarma"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AplicacionRelojWendel"
        mc:Ignorable="d"
        ResizeMode="NoResize"
        Title="VentanaAlarma" Height="450" Width="800">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </Window.Resources>

    <Grid Background="#FFED4F4F">

        <Button Style="{StaticResource GelButton}" Name="btnCerrar" Content="CERRAR" HorizontalAlignment="Center" Height="66" VerticalContentAlignment="Center" HorizontalContentAlignment="Center" Margin="0,334,0,0" VerticalAlignment="Top" Width="172" Click="btnCerrar_Click"/>
        <Label Style="{StaticResource estiloLabel}" Name="labelAlarma" Content="Alarma" Height="301" VerticalContentAlignment="Center"  HorizontalContentAlignment="Center" Margin="29,10,0,0" VerticalAlignment="Top" Width="733" FontSize="24"/>

    </Grid>
</Window>
